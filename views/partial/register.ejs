<div class="register" style="width: 50vw !important; background-color: rgba(99, 110, 114,0.5);margin: 8% auto;">
        <form class="border border-light p-5" action="" method="POST">
            <h3 id="logo">Register</h3>
           
            <input type="text"  class="form-control mb-4" placeholder="UserName" name="userName" required>
            <input type="text"  class="form-control mb-4" placeholder="FirstName" name="firstName" required>
            <input type="text"  class="form-control mb-4" placeholder="LastName" name="lastName" required>
           
            
            <% if(err){ %>
                <input style="border-color: rgba(214, 48, 49,0.5);" type="text"  class="form-control mb-4" placeholder="<%=err.message%>" name="email" required>
                
            <% } else {%>
                <input type="text"  class="form-control mb-4" placeholder="Email" name="email" required>
            <%}%>
            <input type="text" class="form-control mb-4" placeholder="Address" name="address" required>
            <input type="date" class="form-control mb-4" placeholder="Address" name="birthday" required>
            <input type="password" class="form-control mb-4" placeholder="Password" name="password">
        
            <button class="btn btn-block my-4 submit" type="submit">Register</button>
        </form>
</div>