<div class="login">
        <form class="border border-light p-5" action="" method="POST">
                
            <h3 id="logo">Sign in</h3>
            <% if(error){ %>
                <input  style="border-width: 2px;border-color: rgba(214, 48, 49,0.8);" type="email" class="form-control mb-4" placeholder="wrong email/password" name='email' required>
                <input  style="border-width: 2px; border-color: rgba(214, 48, 49,1.0);"  type="password" class="form-control mb-4" placeholder="wrong email/password" name='password' required>
            <% } else{%>
                <input type="email" class="form-control mb-4" placeholder="E-mail" name='email' required>
        
                <input type="password" class="form-control mb-4" placeholder="Password" name='password' required>
            <%}%>
            
        
            <div class="d-flex justify-content-between">
                <div>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                    </div>
                </div>
            </div>
            <button class="btn btn-block my-4 submit" type="submit">Sign in</button>
            <div class="text-center">
                <p>Not a member?
                    <a href="/register">Register</a>
                </p>
            </div>
        </form>
</div>